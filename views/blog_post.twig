{% extends "layout.twig" %}

{% block blog_title %}A simple blog - {{posts[0].title}} {% endblock %}

{% block blog_section %}
        <div class="col-sm-8 blog-main">

          {% for post in posts %}
          <div class="blog-post">
            <h2 class="blog-post-title">{{ post.title }}</h2>
            <p>{{ post.content | raw }}</p>
          </div><!-- /.blog-post -->
          <hr>

          {% endfor %}

        </div><!-- /.blog-main -->
{% endblock %}
